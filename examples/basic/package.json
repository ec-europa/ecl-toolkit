{
  "private": true,
  "name": "@ec-europa/ecl-example-basic",
  "version": "0.16.2",
  "scripts": {
    "build:copy": "ecl-builder copy",
    "build:scripts": "ecl-builder scripts",
    "build:styles": "ecl-builder styles",
    "build": "npm-run-all --parallel build:*",
    "clean": "rimraf tmp build dist static/framework",
    "dist":
      "npm run clean && fractal build && cross-env NODE_ENV=production npm run build",
    "lint:js": "eslint .",
    "lint:scss": "stylelint \"./framework/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -c",
    "serve": "fractal start --sync",
    "start": "npm-run-all clean build --parallel serve watch",
    "test:coding-conventions": "npm run lint",
    "test:functional": "wdio test/wdio.conf.js",
    "watch:scripts":
      "chokidar \"./framework/**/*.js\" -c \"eslint {path} && npm run build:scripts\"",
    "watch:styles":
      "chokidar \"./framework/**/*.scss\" -c \"stylelint {path} || true && npm run build:styles\"",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@ec-europa/ecl-builder": "^0.14.0",
    "@ec-europa/ecl-fractal-theme": "0.13.2",
    "@ec-europa/ecl-qa": "^0.4.0",
    "@ec-europa/eslint-config-ecl": "^0.5.0",
    "@ec-europa/stylelint-config-ecl": "^0.8.0",
    "@frctl/fractal": "1.1.7",
    "@frctl/twig": "1.0.0-beta.2",
    "chai": "4.1.2",
    "chokidar-cli": "1.2.0",
    "cross-env": "5.1.3",
    "dotenv": "5.0.1",
    "eslint": "4.18.1",
    "npm-run-all": "4.1.2",
    "prettier": "1.11.0",
    "rimraf": "2.6.2",
    "stylelint": "9.1.1",
    "wdio-mocha-framework": "0.5.12",
    "wdio-sauce-service": "0.4.8",
    "wdio-screenshot": "0.6.0",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-static-server-service": "1.0.1",
    "wdio-visual-regression-service": "0.8.0",
    "webdriverio": "4.11.0"
  },
  "dependencies": {
    "@ec-europa/ecl-preset-full": "0.6.0"
  },
  "engines": {
    "node": ">=6.9.5"
  }
}
